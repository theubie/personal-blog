<%- include("partials/header"); %>

<h1>Compose</h1>
<form class="" action="/compose" method="post">
  <div class='form-group'>
    <label for='postTitle'>Title</label>
    <input class="form-control" type="text" name="postTitle" id="postTitle">
  </div>
  <div class='form-group'>
    <label for='postBody'>Post</label>
    <textarea class="form-control" name="postBody" rows="8" cols="80" id="postBody"></textarea>
  </div>
  <button type="submit" class='btn btn-primary' name="publish">Publish</button>
</form>

